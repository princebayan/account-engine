<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.accountengine.customer.account.AccountRepository">

    <resultMap        id="baseResultMap"        type="com.example.accountengine.customer.account.AccountEntity">
        <id           column="id"               property="id"             jdbcType="INTEGER"/>
        <result       column="account_number"   property="accountNumber"  jdbcType="VARCHAR"/>
        <result       column="balance"          property="balance"        jdbcType="DECIMAL"/>
      <association    column="currency_id"      property="currency"       javaType="com.example.accountengine.customer.account.currency.CurrencyEntity"   select="com.example.accountengine.customer.account.currency.CurrencyRepository.findById"/>
      <association    column="customer_id"      property="customer"       javaType="com.example.accountengine.customer.CustomerEntity"                    select="com.example.accountengine.customer.CustomerRepository.findById"/>

    </resultMap>



  <select id="findByCustomerId" resultMap="baseResultMap" parameterType="Integer">
        SELECT  *
          FROM  account
         WHERE  fk_customer_id = #{id}
    </select>


</mapper>